# fix up /etc/issue
(
    grep -v '^Base Image' /etc/issue
    echo "Base Image Date:" `date`
    echo "Base Image OS:" `facter operatingsystem` `facter operatingsystemrelease`
    echo "Base Image Host:" `facter fqdn`
) > /etc/issue~
mv /etc/issue{~,}
