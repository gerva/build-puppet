# fix up /etc/issue
(
    grep -v '^Kickstart' /etc/issue
    echo "Kickstart Date:" `date`
    echo "Kickstart OS:" `facter operatingsystem` `facter operatingsystemrelease`
) > /etc/issue~
mv /etc/issue~ /etc/issue
