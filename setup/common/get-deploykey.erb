# get the PUPPET_PASS; this will be our key to getting a certificate down
# the line..

for word in $(</proc/cmdline); do
        case $word in
                PUPPET_PASS=*)
                    PUPPET_PASS="${word//PUPPET_PASS=}" ;;
        esac
done

if [ -z "$PUPPET_PASS" ]; then
    echo "PUPPET_PASS was not set; aborting setup."
    fail
fi
