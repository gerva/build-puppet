#! /bin/bash
# initscript for buildbot

# chkconfig: 2345 50 08
### BEGIN INIT INFO
# Provides:          buildbot-<%=master_name%>
# Required-Start:    $local_fs $network
# Should-Start:      $remote_fs
# Should-Stop:       $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      K 0 1 6
# Short-Description: Buildbot <%=master_name%>
# Description:       Buildbot <%=master_name%>
### END INIT INFO

# Required-Stop:     $local_fs
PATH=/sbin:/bin:/usr/sbin:/usr/bin
DESC="Buildbot <%=master_name%>"

USER=cltbld

DAEMON=/usr/bin/make
BASEDIR="<%=full_master_dir%>"
PIDFILE="<%=full_master_dir%>/<%=master_name%>.pid"

test -x ${DAEMON} || exit 0

. /etc/init.d/functions

start_buildbot() {

    su -s /bin/bash -c "${DAEMON} -C ${BASEDIR} start" - ${USER}
    return $?
}

stop_buildbot() {
    if [ -f $PIDFILE ]; then
        PID=$(cat $PIDFILE)
        ${PREFIXCMD} su -s /bin/bash -c "kill $PID" - ${USER}
        ret=$?
        return $?
    fi
    return 0
}

do_start () {
    errors=0
    if ! start_buildbot; then
         errors=1
    fi
    return $errors
}

do_stop () {
    errors=0
    if ! stop_buildbot; then
         errors=1
    fi
    return $errors
}

do_restart () {
    errors=0
    if ! do_stop; then
        return 1
    fi
    if ! do_start; then
        return 1
    fi
    return 0
}

do_status () {
    errors=0
    if [ -f $PIDFILE ]; then
        PID=$(cat $PIDFILE)
        kill -0 $PID
        ret=$?
        return $?
    fi
    return 1
}

case "$1" in
  start)
        do_start
        exit $?
        ;;
  stop)
        do_stop
        exit $?
        ;;
  restart)
        do_restart
        exit $?
        ;;
  status)
        do_status
        exit $?
        ;;
  *)
        log_warning_msg "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac


