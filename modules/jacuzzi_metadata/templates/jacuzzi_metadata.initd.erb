### BEGIN INIT INFO
# Provides:          jacuzzi_metadata
# Required-Start:    $local_fs $network
# Should-Start:      $remote_fs
# Should-Stop:       $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      K 0 1 6
# Short-Description: jacuzzi_metadata
# Description:       Fetches jacuzzi metadata for VMs and stores it in a local file
### END INIT INFO

# MOZILLA DEPLOYMENT NOTES
# - This file is distributed by Puppet to all linux build servers
# - it lives in the 'jacuzzi_metadata' puppet module

# Required-Stop:     $local_fs
PATH=/sbin:/bin:/usr/sbin:/usr/bin
DESC="jacuzzi_metadata"

CMD=/usr/local/bin/jacuzzi_metadata.py
OUTPUT=/etc/jacuzzi_metadata.json
PYTHON=<%= scope.lookupvar('::packages::mozilla::python27::python') %>

test -x ${CMD} || exit 0

do_start () {
    echo "Fetching jacuzzi metadata"
    if ${CMD} -o ${OUTPUT}; then
        chmod 644 ${OUTPUT}
        echo "done"
        return 0
    else
        echo "failed"
        return 1
    fi
}

do_stop () {
    echo "nothing to do"
    return 1
}

do_reload () {
    do_stop
}

do_restart () {
    do_stop
}

case "$1" in
  start)
  	do_start
  	exit $?
	;;
  stop)
  	do_stop
  	exit $?
	;;
  reload)
  	do_reload
  	exit $?
	;;
  restart|force-reload)
  	do_restart
  	exit $?
	;;
  *)
	log_warning_msg "Usage: $0 {start|stop|restart|reload|force-reload}"
	exit 1
	;;
esac

exit 0
